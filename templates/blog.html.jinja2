                setInterval(() => {
                    const newchars = [];
                    chars.forEach(c => newchars.push(`<span style="position: relative; left: ${Math.random() * multiplier}px; top: ${Math.random() * multiplier}px">${c}</span>`))
                    e17.innerHTML = newchars.join("")
